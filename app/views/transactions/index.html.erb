<h1>Recent Transfers</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Deposit</th>
      <th>Block Height</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |tx| %>
      <tr>
        <td><%= tx.sender %></td>
        <td><%= tx.receiver %></td>
        <td><%= tx.deposit %></td>
        <td><%= tx.height %></td>
      </tr>
    <% end %>
  </tbody>
</table>